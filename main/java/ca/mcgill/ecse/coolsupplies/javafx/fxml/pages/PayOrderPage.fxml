<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.mcgill.ecse.coolsupplies.javafx.fxml.controllers.PayOrderPageController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="20.0" />
      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="150.0" />
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="80.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label alignment="CENTER_RIGHT" text="Order Number:" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
      <Label alignment="CENTER_RIGHT" text="Authorization Code:" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.valignment="CENTER" />
      <TextField fx:id="orderNumberTextField" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" />
      <Label alignment="CENTER_RIGHT" text="Penalty Authorization Code:" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
      <Button fx:id="payForOrderButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#PayForOrderClicked" text="Pay For Order" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
      <Button fx:id="payPenalityForOrderButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#payPenalityClicked" text="Pay Penality For Order" GridPane.columnIndex="4" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" />
      <TextField fx:id="authCodeTextField" GridPane.columnIndex="4" />
      <TextField fx:id="penAuthCodeTextField" GridPane.columnIndex="4" GridPane.rowIndex="1" />
   </children>
</GridPane>
